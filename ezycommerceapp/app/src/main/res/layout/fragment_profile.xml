<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal">

        <!-- Profile Image -->
        <ImageView
            android:id="@+id/profileImage"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:src="@drawable/ic_profile_img"
            android:contentDescription="Profile Picture"
            android:scaleType="centerCrop"
            android:layout_marginBottom="16dp"
            android:padding="4dp"/>

        <!-- Basic Info -->
        <TextView
            android:id="@+id/profileName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Navid Munshi"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_marginBottom="8dp" />

        <TextView
            android:id="@+id/profileEmail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="navidmunshi24@gmail.com"
            android:textSize="16sp"
            android:layout_marginBottom="8dp" />

        <TextView
            android:id="@+id/profilePhone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="+880123456789"
            android:textSize="16sp"
            android:layout_marginBottom="16dp" />

        <!-- More Dummy Info -->
        <TextView
            android:id="@+id/profileAddress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Address: 123 Gulshan, Dhaka, Bangladesh"
            android:textSize="16sp"
            android:layout_marginBottom="8dp" />

        <TextView
            android:id="@+id/profileMembership"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Membership: Gold Member"
            android:textSize="16sp"
            android:layout_marginBottom="8dp" />

        <TextView
            android:id="@+id/profileJoined"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Joined: January 2023"
            android:textSize="16sp"
            android:layout_marginBottom="8dp" />

        <TextView
            android:id="@+id/profilePayment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Preferred Payment: Visa **** 1234"
            android:textSize="16sp"
            android:layout_marginBottom="24dp" />

        <!-- Logout Button -->
        <Button
            android:id="@+id/logoutButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Logout"
            android:backgroundTint="@android:color/holo_red_dark"
            android:textColor="@android:color/white"
            android:padding="10dp"/>
    </LinearLayout>
</ScrollView>
