<shape xmlns:android="http://schemas.android.com/apk/res/android" android:shape="rectangle">
    <!-- Background color for category chip -->
    <solid android:color="#E0E7FF"/> <!-- light purple/blue -->

    <!-- Rounded corners -->
    <corners android:radius="20dp"/>

    <!-- Border around chip -->
    <stroke
        android:width="1dp"
        android:color="#A5B4FC"/> <!-- darker purple border -->

    <!-- Optional padding -->
    <padding
        android:left="12dp"
        android:top="6dp"
        android:right="12dp"
        android:bottom="6dp"/>
</shape>
