<resources>
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/coffeeBrown</item>
        <item name="colorPrimaryDark">@color/darkText</item>
        <item name="colorAccent">@color/coffeeBrown</item>
        <item name="android:windowBackground">@color/creamWhite</item>
    </style>

    <style name="HeadingText">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/darkText</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="BodyText">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/darkText</item>
    </style>

</resources>
